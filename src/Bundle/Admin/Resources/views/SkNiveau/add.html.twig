{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Ajouts niveaux {% endblock %}

{% set menu_niveau        = true %}

{% block body %}
    <div class="card shadow mb-4 col-md-5 col-xs-12 mx-auto">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Ajouter un niveau</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.niveauNom) }}
                    <div class="funkyradio">
                        <div class="funkyradio-primary">
                            <input type="checkbox" name="classe" id="checkbox2" checked/>
                            <label for="checkbox2">Ajouter des classes pour ce niveau ? </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-md-right col-md-5 btn-bloc" value="Enregistrer" name="new_niveau"/>
                <a href="{{ path('niveau_index') }}"
                   class="btn btn-google btn-bloc col-md-4">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}