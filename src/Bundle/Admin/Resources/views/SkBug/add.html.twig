{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Ajout informations {% endblock %}

{% set menu_info     = true %}

{% block body %}
    <div class="card shadow mb-4 col-md-6 col-xs-12 mx-auto">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Signaler un bug ou am√©lioration(s)</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.titre) }}
                    {{ form_row(form.description) }}
                    <div class="form-group">
                        <label for="">Status</label>
                        <select name="status" class="form-control col-lg-4" id="">
                            <option value="Important">Important</option>
                            <option value="Features">Amelioration</option>
                            <option value="Erreur">Erreur</option>
                            <option value="En cours">En cours</option>
                            <option value="Fix">Fix</option>
                        </select>
                    </div>
                    <label for="sk_bug_attachment" class="label-file">Ajouter un fichier</label>
                    {{ form_row(form.attachment, {'label':false}) }}
                    <p>Fichier : <small id="label-file">Aucun fichier choisi</small></p>
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-md-right col-md-5 btn-bloc mt-2" value="Envoyer" name="new_info"/>
                <a href="{{ path('bug_index') }}"
                   class="btn btn-google col-md-4 btn-bloc mt-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}