{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Modifications classes {% endblock %}

{% set menu_classe       = true %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Modifier la classe</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.classeNom) }}
                    <div class="form-group ">
                        <select name="niveau" id="" class="form-control">
                            {% for niveau in niveau  %}
                                <option value="{{ niveau.id }}" >{{ niveau.niveauNom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-md-right col-md-5 btn-bloc mt-2" value="Modifier" name="update_classe"/>
                <a href="{{ path('classe_index') }}"
                   class="btn btn-google col-md-4 btn-bloc mt-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}