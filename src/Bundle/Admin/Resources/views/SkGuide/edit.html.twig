{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Modification guide {% endblock %}

{% set menu_guide     = true %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Modifier un guide</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.description) }}
                    <label for="sk_guide_attachment" class="label-file">Ajouter un fichier</label>
                    {{ form_row(form.attachment, {'label':false}) }}
                    <p>Fichier : <small id="label-file">Aucun fichier choisi</small></p>
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-md-right col-md-5 btn-bloc mt-2" value="Modifier" name="new_guide"/>
                <a href="{{ path('guide_index') }}"
                   class="btn btn-google col-md-4 btn-bloc mt-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}