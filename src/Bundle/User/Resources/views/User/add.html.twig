{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} | Ajout utilisateur {% endblock %}

{% set menu_user        = true %}
{% set menu_user_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    <div class="card shadow mb-4 col-md-8 col-xs-12 mx-auto">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Créer un utilisateur</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.usrLastname, {'attr': {'class': 'col-md-10'}}) }}
                    {{ form_row(form.usrFirstname, {'attr': {'class': 'col-md-10'}}) }}
                    {{ form_row(form.usrAddress, {'attr': {'class': 'col-md-10'}}) }}
                    {{ form_row(form.email, {'attr': {'class': 'col-md-8'}}) }}
                    {{ form_row(form.usrPhone, {'attr': {'class': 'col-md-6'}}) }}
                </div>
                <div class="col-md-6">
                    {% if is_granted('ROLE_SUPERADMIN') %}
                        <div class="form-group">
                            <label for="">Nom de l'établissement</label>
                            <input type="text" name="etsNom" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Début année scolaire</label>
                            <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                                <input type="text" name="annDebut" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
                                <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Fin année scolaire</label>
                            <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
                                <input type="text" name="annFin" class="form-control datetimepicker-input" data-target="#datetimepicker2"/>
                                <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                        <div class="hide" {% if is_granted('ROLE_SUPERADMIN') %} style="display: none"{% endif %}>
                            <label for="sk_userbundle_user_imgUrl" class="label-file">Ajouter une photo de profil</label>
                            {{ form_row(form.imgUrl, {'label':false}) }}
                            <p>Fichier : <small id="label-file">Aucun fichier choisi</small></p>
                        </div>

                    {{ form_row(form.skRole, {'attr': {'class': 'col-md-4'}}) }}
                    <div class="hide" style="display: none;">
                        {{ form_row(form.enabled) }}
                    </div>
                    {{ form_row(form.username, {'attr': {'class': 'col-md-6'}}) }}
                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'col-md-6'}}) }}
                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'col-md-6'}}) }}
                </div>
            </div>

            <div class="box-footer">
                <input type="submit" class="btn btn-primary float-md-right col-md-5 btn-bloc mt-2" value="Enregistrer" name="new_user"/>
                {% if not is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('user_index') }}"
                       class="btn btn-google btn-bloc col-md-4 mt-2">
                        Annuler
                    </a>
                {% endif %}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
            $('#datetimepicker2').datetimepicker();
        });
    </script>
{% endblock %}